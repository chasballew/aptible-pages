{{! white background social proof }}
<div class="compliance-social" id="start">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-12">
        <h3 class="intro-heading">{{social_proof.title}}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 col-xs-6">
        <img src="{{images.social_kp}}" alt="Aptible and Kaiser Permanente" />
      </div>
      <div class="col-md-3 col-xs-6">
        <img src="{{images.social_va}}" alt="Aptible and US Department of Veteran Affairs" />
      </div>
      <div class="col-md-3 col-xs-6">
        <img src="{{images.social_md}}" alt="Aptible and MD Anderson Cancer Center" />
      </div>
      <div class="col-md-3 col-xs-6">
        <img src="{{images.social_st}}" alt="Aptible and Stanford Hospital and Clinics" />
      </div>
      <div class="col-md-3 col-md-offset-3 col-xs-6">
        <img src="{{images.social_jh}}" alt="Aptible and John Hopkins University" />
      </div>
      <div class="col-md-3 col-xs-6">
        <img src="{{images.social_uh}}" alt="Aptible and United Health Group" />
      </div>
    </div>
  </div>
</div>

{{! white background security }}
<div class="container compliance-model">
  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3 col-sm-12">
      <h4 class="section-header">{{compliance_model.sub_title}}</h4>
      <h2 class="section-header">{{compliance_model.title}}</h2>
      <div class="long-dash"></div>
      <p>{{#markdown}}{{compliance_model.body}}{{/markdown}}</p>
    </div>
    <div class="col-md-8 col-md-offset-2 col-sm-12">
      {{> compliance_model }}
    </div>
  </div>
</div>

{{! gray background 3 staggered benefits }}
<div class="section gray bordered">
  <div class="container">

    {{! Benefit 1 }}
    <div class="row compliance-benefit compliance-benefit-testimonial">
      <div class="col-md-3">
        <div class="compliance-benefit-testimonial-type compliance-benefit-image">
          {{> compliance_risk }}
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1 col-sm-12 compliance-benefit-copy">
        <h4>{{risk_assessment.sub_title}}</h4>
        <h2>{{risk_assessment.title}}</h2>
        <div class="long-dash"></div>
        <p>{{#markdown}}{{risk_assessment.body}}{{/markdown}}</p>

        {{#and risk_testimonial.image risk_testimonial.copy}}
          {{! Customer Testimonial }}
          <div class="compliance-testimonial">
            <div class="compliance-testimonial-image">
              <img src="{{risk_testimonial.image}}" alt="Risk Assessment" />
            </div>
            <div class="compliance-testimonial-copy">
              {{#markdown}}{{risk_testimonial.copy}}{{/markdown}}
              <h5 class="hinted">{{risk_testimonial.author}}</h5>
              {{#if risk_testimonial.read_more}}
                <a href="{{risk_testimonial.read_more}}"><h5>Read More &rarr;</h5></a>
              {{/if}}
            </div>
          </div>
        {{/and}}
      </div>
    </div>

    {{! Benefit 2 }}
    <div class="row compliance-benefit">
      <div class="col-md-7 col-sm-12 compliance-benefit-copy">
        <h4>{{policies.sub_title}}</h4>
        <h2>{{policies.title}}</h2>
        <div class="long-dash"></div>
        <p>{{#markdown}}{{policies.body}}{{/markdown}}</p>
        {{#and policies_testimonial.image policies_testimonial.copy}}
          {{! Customer Testimonial }}
          <div class="compliance-testimonial">
            <div class="compliance-testimonial-image">
              <img src="{{policies_testimonial.image}}" alt="Policies & Procedures" />
            </div>
            <div class="compliance-testimonial-copy">
              {{#markdown}}{{policies_testimonial.copy}}{{/markdown}}
              <h5 class="hinted">{{policies_testimonial.author}}</h5>
              {{#if policies_testimonial.read_more}}
                <a href="{{policies_testimonial.read_more}}"><h5>Read More &rarr;</h5></a>
              {{/if}}
            </div>
          </div>
        {{/and}}
      </div>
      <div class="col-md-3 col-md-offset-1">
        <div class="compliance-benefit-testimonial-type compliance-benefit-image">
          {{> compliance_policies }}
        </div>
      </div>
    </div>

    {{! Benefit 3 }}
    <div class="row compliance-benefit compliance-benefit-testimonial">
      <div class="col-md-3">
        <div class="compliance-benefit-testimonial-type compliance-benefit-image">
          {{> compliance_training }}
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1 col-sm-12 compliance-benefit-copy">
        <h4>{{training.sub_title}}</h4>
        <h2>{{training.title}}</h2>
        <div class="long-dash"></div>
        <p>{{#markdown}}{{training.body}}{{/markdown}}</p>
        {{#and training_testimonial.image training_testimonial.copy}}
          {{! Customer Testimonial }}
          <div class="compliance-testimonial">
            <div class="compliance-testimonial-image">
              <img src="{{training_testimonial.image}}" alt="Training" />
            </div>
            <div class="compliance-testimonial-copy">
              {{#markdown}}{{training_testimonial.copy}}{{/markdown}}
              <h5 class="hinted">{{training_testimonial.author}}</h5>
              {{#if training_testimonial.read_more}}
                <a href="{{training_testimonial.read_more}}"><h5>Read More &rarr;</h5></a>
              {{/if}}
            </div>
          </div>
        {{/and}}
      </div>
    </div>
  </div>
</div>

{{! CTA }}
<div class="container">
  <div class="row section text-center">
    <div class="compliance-cta col-md-8 col-md-offset-2 col-sm-12">
      <h2 class="cta-title">{{cta.title}}</h2>
      <p>{{cta.sub_title}}</p>
      <p>{{cta.sub_title2}}</p>
      <a class="btn btn-primary btn-lg" href="{{config.dashboard_signup_url}}">{{cta.button}}</a>
    </div>
  </div>
</div>
